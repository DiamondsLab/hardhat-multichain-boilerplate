{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Multichain Task",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": ["run-multichain", "--multichain", "sepolia,amoy"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "neverOpen"   
        },
        {
            "name": "2Multichain Plugin Test",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "program": "${workspaceFolder}/node_modules/.bin/hardhat",
            "args": [
                "test-multichain",
                "--chains", "sepolia",
                // "--show-stack-traces",
                // "--", "./test/multichain_plugin.test.ts"
            ],
            "runtimeExecutable": "yarn",
            "sourceMaps": true,
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "smartStep": true,
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Multichain Plugin Test",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            // "program": "${workspaceFolder}/test/multichain_plugin.test.ts",
            // "args": ["test-multichain", "--chains", "sepolia"],
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "hardhat", "test-multichain", "--chains", "sepolia"],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js", "${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "neverOpen"  
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Unit Tests",
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
            "program": "${workspaceFolder}/test/multichain_test.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
            // "stopOnEntry": true,
            "trace": true
        }, 
        {
            "name": "Multichain Scaffold test",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/test/integration/multichain/tests/exampleTest1.ts",
            "env": {"DEBUG" : "hardhat*", "CHAINS" : "sepolia"},
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "test",
            ],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js", "${workspaceFolder}/dist/**/*.js"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
        },
        {
            "name": "Multichain AIO File test",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/test/multichain_test.ts",
            "env": {"DEBUG" : "hardhat*"},
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "test",
            ],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js", "${workspaceFolder}/dist/**/*.js"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
        },
        {
            "name": "Yarn Fork test",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/hardhat.config.ts",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "fork:ethereum",
            ],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js", "${workspaceFolder}/dist/**/*.js"],
            // "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
        },
    ]
}