{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Unit Tests",
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
            "program": "${workspaceFolder}/test/multichain_test.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
            // "stopOnEntry": true,
            "trace": true
        }, 
        {
            "name": "Hardhat test",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/test/multichain_test.ts",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test",
                // "${workspaceFolder}/test/multichain_test.ts"
            ],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js", "${workspaceFolder}/dist/**/*.js"],
            // "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
        },
        {
            "name": "Hardhat Fork",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/hardhat.config.ts",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "fork:ethereum",
                // "${workspaceFolder}/test/multichain_test.ts"
            ],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js", "${workspaceFolder}/dist/**/*.js"],
            // "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/**/*.ts"],
            "sourceMaps": true,
            "smartStep": true,
        },
        {
            "name": "Debug hardhat ts script",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-hardhat",
                "${file}"
            ]
        },
        {
            "name": "Debug harthat ts test",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test",
                "${file}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            // "stopOnEntry": true,
            "resolveSourceMapLocations": ["${workspaceFolder}/dist/**/*.js", "${workspaceFolder}/test/**/*.ts"]
        }
    ]
}